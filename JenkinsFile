pipeline {
    agent any

    environment {
        SONAR_PROJECT_KEY = 'mern_app'
        SONAR_HOST_URL = 'http://sonarqube:9000'
        SONAR_TOKEN = credentials('sonarqube')  // Jenkins credential ID

    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/pakkirappa/mern_stack_application_jenkins_auto.git'
            }
        }

        stage('Install Backend Deps') {
            steps {
                dir('backend') {
                    sh 'npm install'
                }
            }
        }

        stage('Run Backend Tests') {
            steps {
                dir('backend') {
                    sh 'npm test || echo "No backend tests found"'
                }
            }
        }

        stage('Install Frontend Deps') {
            steps {
                dir('frontend') {
                    sh 'npm install'
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir('frontend') {
                    sh 'npm run build'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('MySonarQube') {
                    sh """
                        npx sonar-scanner \
                        -Dsonar.projectKey=${SONAR_PROJECT_KEY} \
                        -Dsonar.sources=backend,frontend \
                        -Dsonar.host.url=${SONAR_HOST_URL} \
                        -Dsonar.login=${SONAR_TOKEN}
                    """
                }
            }
        }

        stage('Push Frontend Build to GitHub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'github-token', usernameVariable: 'GIT_USER', passwordVariable: 'GIT_PASS')]) {
                    dir('frontend/build') {
                        sh '''
                        git init
                        git config user.email "jenkins@example.com"
                        git config user.name "Jenkins CI"

                        git remote add origin https://pakkirappa:Pakkirappa1234@@github.com/pakkirappa/mern_stack_application_jenkins_auto.git
                        git checkout -b gh-pages
                        git add .
                        git commit -m "Deploy frontend build from Jenkins [ci skip]"
                        git push origin gh-pages --force
                        '''
                    }
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline finished. Check SonarQube for code quality and GitHub for frontend build."
        }
    }
}
