# Jenkins Docker Deployment Environment Variables
# Source this file before running Docker Compose in Jenkins

# Application Configuration
APP_NAME=mern-stack-app
NODE_ENV=production
BUILD_NUMBER=${BUILD_NUMBER:-latest}
BUILD_DATE=$(date -u +"%Y-%m-%dT%H:%M:%SZ")

# Database Configuration
MONGO_USERNAME=mernuser
MONGO_PASSWORD=mernpass123
MONGO_DATABASE=mernapp
MONGO_PORT=27017

# Backend Configuration
BACKEND_PORT=5000
BACKEND_REPLICAS=2
BACKEND_MEMORY_LIMIT=512M
BACKEND_CPU_LIMIT=0.5
BACKEND_MEMORY_RESERVATION=256M
BACKEND_CPU_RESERVATION=0.25

# Frontend Configuration
FRONTEND_PORT=80
FRONTEND_HTTPS_PORT=443
FRONTEND_MEMORY_LIMIT=256M
FRONTEND_CPU_LIMIT=0.25
FRONTEND_MEMORY_RESERVATION=128M
FRONTEND_CPU_RESERVATION=0.1

# URLs
BACKEND_URL=http://backend:5000
FRONTEND_URL=http://frontend

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production-and-keep-it-secret

# Docker Registry
DOCKER_REGISTRY=your-registry.com

# Optional Services
REDIS_PASSWORD=redispassword
REDIS_PORT=6379
LB_PORT=8080
PROMETHEUS_PORT=9090
FLUENTD_PORT=24224

# Logging
LOG_LEVEL=info